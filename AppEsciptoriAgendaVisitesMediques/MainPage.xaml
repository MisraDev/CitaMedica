<Page
    x:Class="AppEsciptoriAgendaVisitesMediques.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppEsciptoriAgendaVisitesMediques"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="1,1,1,1" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <!-- Define las filas adicionales aquí -->

        </Grid.RowDefinitions>
        <TextBlock Text="Agenda de Visitas Médicas" 
           FontSize="24" 
           FontWeight="Bold" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Grid.Row="0" 
           Grid.Column="7" Margin="0,10,0,0"/>


        <Grid x:Name="GridCuadricula" Margin="5,50,4,10" Grid.Row="1" Width="1489" Height="Auto" Grid.RowSpan="2" Background="{ThemeResource SystemChromeLowColor}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <TextBlock TextAlignment="Center" Text="Hora/Día" Grid.Row="0" Grid.Column="0"/>
            <TextBlock TextAlignment="Center" Text="Lunes" Grid.Row="0" Grid.Column="1" FocusVisualPrimaryBrush="#FF6F94D8" FontWeight="Bold" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <TextBlock TextAlignment="Center" Text="Martes" Grid.Row="0" Grid.Column="2" FocusVisualPrimaryBrush="#FF6F94D8" FontWeight="Bold" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBlock TextAlignment="Center" Text="Miércoles" Grid.Row="0" Grid.Column="3" FocusVisualPrimaryBrush="#FF6F94D8" FontWeight="Bold" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBlock TextAlignment="Center" Text="Jueves" Grid.Row="0" Grid.Column="4" FocusVisualPrimaryBrush="#FF6F94D8" FontWeight="Bold" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBlock TextAlignment="Center" Text="Viernes" Grid.Row="0" Grid.Column="5" FocusVisualPrimaryBrush="#FF6F94D8" FontWeight="Bold" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBlock TextAlignment="Center" Text="Sábado" Grid.Row="0" Grid.Column="6" FocusVisualPrimaryBrush="#FF6F94D8" FontWeight="Bold" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBlock TextAlignment="Center" Text="Domingo" Grid.Row="0" Grid.Column="7" FocusVisualPrimaryBrush="#FF6F94D8" FontWeight="Bold" FontSize="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBlock Text="7:00" Grid.Row="1" Grid.Column="0"/>
            <TextBlock Text="7:30" Grid.Row="2" Grid.Column="0"/>
            <TextBlock Text="8:00" Grid.Row="3" Grid.Column="0"/>
            <TextBlock Text="8:30" Grid.Row="4" Grid.Column="0"/>
            <TextBlock Text="9:00" Grid.Row="5" Grid.Column="0"/>
            <TextBlock Text="9:30" Grid.Row="6" Grid.Column="0"/>
            <TextBlock Text="10:00" Grid.Row="7" Grid.Column="0"/>
            <TextBlock Text="10:30" Grid.Row="8" Grid.Column="0"/>
            <TextBlock Text="11:00" Grid.Row="9" Grid.Column="0"/>
            <TextBlock Text="11:30" Grid.Row="10" Grid.Column="0"/>
            <TextBlock Text="12:00" Grid.Row="11" Grid.Column="0"/>
            <TextBlock Text="12:30" Grid.Row="12" Grid.Column="0"/>
            <TextBlock Text="13:00" Grid.Row="13" Grid.Column="0"/>
            <TextBlock Text="13:30" Grid.Row="14" Grid.Column="0"/>
            <TextBlock Text="14:00" Grid.Row="15" Grid.Column="0"/>
            <TextBlock Text="14:30" Grid.Row="16" Grid.Column="0"/>
            <TextBlock Text="15:00" Grid.Row="17" Grid.Column="0"/>
            <TextBlock Text="15:30" Grid.Row="18" Grid.Column="0"/>
            <TextBlock Text="16:00" Grid.Row="19" Grid.Column="0"/>
            <TextBlock Text="16:30" Grid.Row="20" Grid.Column="0"/>
            <TextBlock Text="17:00" Grid.Row="21" Grid.Column="0"/>
            <TextBlock Text="17:30" Grid.Row="22" Grid.Column="0"/>
            <TextBlock Text="18:00" Grid.Row="23" Grid.Column="0"/>
            <TextBlock Text="18:30" Grid.Row="24" Grid.Column="0"/>
            <TextBlock Text="19:00" Grid.Row="25" Grid.Column="0"/>
            <TextBlock Text="19:30" Grid.Row="26" Grid.Column="0"/>
            <TextBlock Text="20:00" Grid.Row="27" Grid.Column="0"/>
            <TextBlock Text="20:30" Grid.Row="28" Grid.Column="0"/>

            <Rectangle Grid.Row="2" Grid.Column="4" Fill="LightBlue" Stroke="Black" StrokeThickness="1"/>
        </Grid>

        <Button x:Name="btnPrev" Content="Prev" Grid.Row="3" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="btnNext" Content="Next" Grid.Row="3" VerticalAlignment="Center" Margin="10,0,10,0" HorizontalAlignment="Right" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="btnAvui" Content="Avui" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>




    </Grid>
</Page>
