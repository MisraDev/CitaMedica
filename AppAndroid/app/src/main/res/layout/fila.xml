<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:src="@color/teal_200"
        app:layout_constraintLeft_toLeftOf="@id/grdl"
        app:layout_constraintTop_toTopOf="@id/grdl"
        app:layout_constraintRight_toRightOf="@id/grdl"
        app:layout_constraintBottom_toBottomOf="@id/grdl"
        android:scaleType="centerCrop"
        >
    </ImageView>

    <View android:id="@+id/vieSelected"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/teal_200"
        app:layout_constraintLeft_toLeftOf="@id/grdl"
        app:layout_constraintTop_toTopOf="@id/grdl"
        app:layout_constraintRight_toRightOf="@id/grdl"
        app:layout_constraintBottom_toBottomOf="@id/grdl"
        ></View>

    <GridLayout
        android:id="@+id/grdl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="7dp"
        android:paddingRight="1dp"
        android:paddingTop="7dp"
        android:paddingLeft="7dp"
        >

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txvdata"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="0"
            android:text="2023/03/02"
            android:textSize="30px"
            android:textAlignment="center"
            android:background="@color/teal_200"

            ></TextView>

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txvNameMetge"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:text="Metge"
            android:textAlignment="center"
            android:textSize="60px"
            android:textColor="@color/marine"
            android:background="@color/white"

            >
        </TextView>




        <Button
            android:id="@+id/btnCancel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:src="@color/teal_200"
            android:background="@drawable/border_rodo"
            android:text="cancela"
            app:backgroundTint="@color/marine"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingRight="0dp">


        </Button>

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtEsp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:text="Esp"
            android:textColor="@color/marine"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/white"


            >
        </TextView>

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtHora"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:text="hora"
            android:textColor="@color/marine"
            android:textStyle="bold"
            android:textAlignment="center"

            android:background="@color/teal_200"

            >
        </TextView>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>